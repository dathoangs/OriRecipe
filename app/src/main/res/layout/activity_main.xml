<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navbar_bottom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/housesolid"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:contentDescription="Trang chủ"/>

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heartsolid"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:contentDescription="Công thức yêu thích"/>

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circleplussolid"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:contentDescription="Đăng tải công thức"/>

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/usersolid"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:contentDescription="Thông tin cá nhân"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>