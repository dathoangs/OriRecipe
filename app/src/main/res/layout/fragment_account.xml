<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Tài khoản của bạn"
        android:fontFamily="@font/josefin_sans_bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"

        />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:background="@drawable/backgrounduser"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/layoutProfile"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oanh Hoàng"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa profile"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#686262"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutProfile"
            >
            <TextView
                android:id="@+id/tvMyRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công thức của bạn"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="15dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#686262"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản Bảo mật"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="15dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#686262"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Về OriRecipe"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="15dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#686262"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liên hệ"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="15dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#686262"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:fontFamily="@font/josefin_sans_bold"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:padding="15dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/popupbg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có muốn đăng xuất?"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/btnCo"
                android:background="@drawable/btn_background"
                android:text="CÓ"
                android:fontFamily="@font/josefin_sans_bold"
                android:textSize="18sp"
                android:textColor="#F5F5F5"
                android:textAlignment="center"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/btnHuy"
                android:background="@drawable/btn_background"
                android:text="HUỶ"
                android:fontFamily="@font/josefin_sans_bold"
                android:textSize="18sp"
                android:textColor="#F5F5F5"
                android:textAlignment="center"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>