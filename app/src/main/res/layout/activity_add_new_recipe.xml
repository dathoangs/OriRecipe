<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewRecipe">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navbar_bottom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/housesolid"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heartsolid"
            android:contentDescription="Like"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circleplussolid"
            android:contentDescription="Add"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usersolid"
            android:contentDescription="User"
            android:scaleType="centerInside"
            android:background="@null"
            app:tint="@color/white"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"

        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"

        android:fontFamily="@font/josefin_sans_bold"
        android:text="Tạo công thức của bạn"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/layoutImage"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray"
        android:layout_marginTop="25dp"
       >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imvAdd"
            android:src="@drawable/plussolidwhite"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtImage"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/txtImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Choose your image"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/imvAdd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layoutName"
        app:layout_constraintTop_toBottomOf="@+id/layoutImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="20dp"
            android:text="Tên món"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Nhập tên món ăn của bạn"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="15dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/layoutDes"
        app:layout_constraintTop_toBottomOf="@+id/layoutName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="20dp"
            android:text="Công thức"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:hint="Mô tả món ăn..."
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="15dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutDes"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
       >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:text="Lưu"
            android:textSize="20dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDel"
            android:text="Huỷ"
            android:textSize="20dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:background="@color/black"
            android:textColor="@color/white"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>